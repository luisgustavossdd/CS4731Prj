package dk.itu.mario.level;

public class EngBuildingTool extends Tool{

	@Override
	public int build(int start, int length, int floor, Level level) {
		// TODO Auto-generated method stub
		return 0;
	}

	public void build(int start, int length, int floor, Level level) {
		myLevel.xExit = length + 8;
	    myLevel.yExit = floor;
	
	    // fills the end piece
	    for (int x = length; x < myLevel.width; x++)
	    {
	        for (int y = 0; y < myLevel.height; y++)
	        {
	            if (y >= floor)
	            {
	                myLevel.setBlock(x, y, Level.GROUND);
	            }
	        }
	    }
	}

}
